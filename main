        friend: "Potatoad",
        enemy: "Banion"
      },
      {
        name: "Bitty",
        personality: "Ceria, penuh harapan, suaranya kecil tapi menghangatkan hati",
        ability: "Hope Spark",
        cocok: "Orang yang suka nyerah dan butuh semangat kecil",
        friend: "Kroot",
        enemy: "Jinger"
      },
      {
        name: "Jinger",
        personality: "Dewasa, agak sinis, ngajarin kamu untuk realistis dan kuat",
        ability: "Wise Fire",
        cocok: "Orang yang terlalu dreamy dan butuh realita",
        friend: "Mubii",
        enemy: "Bitty"
      }
    ];

    let currentQ = 0;
    let answers = [];

    const quiz = document.getElementById("quiz");

    function renderQuestion() {
      const q = questions[currentQ];
      quiz.innerHTML = `<h2>${q.q}</h2>` +
        q.o.map((opt, i) => `<button class='option-button' onclick='answer(${i})'>${opt}</button>`).join("");
    }

    function answer(i) {
      answers.push(i);
      currentQ++;
      if (currentQ < questions.length) {
        renderQuestion();
      } else {
        showResult();
      }
    }

    function showResult() {
      const score = Array(spirits.length).fill(0);
      answers.forEach((a, idx) => {
        score[a % spirits.length]++;
      });
      const max = Math.max(...score);
      const spirit = spirits[score.indexOf(max)];

      quiz.innerHTML = `
        <h2>Spirit Veggie Kamu: ${spirit.name}</h2>
        <div class='result'>
          <p><strong>Nama:</strong> ${spirit.name}</p>
          <p><strong>Personality:</strong> ${spirit.personality}</p>
          <p><strong>Ability:</strong> ${spirit.ability}</p>
          <p><strong>Cocok untuk:</strong> ${spirit.cocok}</p>
          <p><strong>Grounding Friend:</strong> ${spirit.friend}</p>
          <p><strong>Enemies Spirit:</strong> ${spirit.enemy}</p>
        </div>
      `;
    }

    renderQuestion();
  </script>
